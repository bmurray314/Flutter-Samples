import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
    //'@override' is needed for every build method since you are overriding the build method in the parent class 'StatelessWidget'
    @orverride                                     
    Widget build(BuildContext context){
        Widget return                               //'Widget' declairs the type of element the build method will return
            Text(
                "Hello World",
                textDirection: TextDirection.ltr,
                textAlign: TextAlign.center,
                style: TextStyle(fontSize: 40.0, color: Colors.blue),
            );                                      //always add a semi-colon at the end of the return command
    }
} //end of class 'MyApp' - stateless widget
        
        
